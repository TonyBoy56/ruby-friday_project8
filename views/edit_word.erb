<h1>Change your word: <%= @word.name %></h1>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="new_word">Change Your word</label>
  <input id="new_word" name="new_word" type="text">
  <button type="submit">Update</button>
</form>

<p><a href="/words">Return to the list of Words</a></p>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete word</button>
</form>