<h3>The Definition: <%= @definition.definition %></h3>

<form action="/words/<%= @word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="edit_definition">Change Your Definition?</label>
  <input name="edit_definition" type="text">
  <button type="submit">Change</button>
</form>

<form action="/words/<%= @word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-warning">Delete!</button>
</form>



